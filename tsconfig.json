{
  // "extends": "@tsconfig/node18/tsconfig.json", // TODO: figure out why this doesn't work
  "compilerOptions": {
    "preserveConstEnums": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}